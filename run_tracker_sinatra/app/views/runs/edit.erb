<h1> Edit your runs here! </h1>
<form method="POST" action="/runs/<%=@run.id%>/edit">
    <input type="hidden" value="PATCH" name="_method">    
    Length: <input type="string" name="run[length]" value="<%= @run.length %>"> <br>
    Date: <input type="date" name="run[date]" value="<%= @run.date %>"> <br>
    Location: <input type="string" name="run[location]" value="<%= @run.location %>"> <br>
    Description: <input type="string" name="run[description]" value="<%= @run.description %>"> <br>
    <input type="submit" value ="Edit run">
</form>